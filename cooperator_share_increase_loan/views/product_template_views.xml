<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_loan_fields" model="ir.ui.view">
        <field name="name">product.template.form.loan.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="cooperator.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='by_individual']/.." position="after">
                <group string="Loan Information">
                    <field name="loan_interest_rate"/>
                    <field name="loan_min_periods"/>
                    <field name="method_period"/>
                    <field name="loan_journal_id"/>
                    <field name="interest_expenses_account_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
