<odoo>
    <record id="subscription_request_form_view_remunerated" model="ir.ui.view">
        <field name="name">subscription.request.form.remunerated</field>
        <field name="model">subscription.request</field>
        <field name="inherit_id" ref="cooperator_voluntary_contribution.subscription_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
            <xpath expr="//page[@name='capital_release_request']" position="after">
                <page name="loan_request" string="Loan request" attrs="{'invisible': [('type', '!=', 'increase_remunerated')]}">
                    <group>
                        <group>
                            <field name="loan_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="customize_loan"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('customize_loan', '=', False)]}">
                        <group>
                            <field name="loan_interest_rate" attrs="{'required': [('type', '=', 'increase_remunerated')]}"/>
                            <field name="short_term_loan_account_id" attrs="{'required': [('customize_loan', '=', True), ('type', '=', 'increase_remunerated')]}"/>
                            <field name="loan_journal_id" attrs="{'required': [('customize_loan', '=', True), ('type', '=', 'increase_remunerated')]}"/>
                        </group>
                        <group>
                            <field name="loan_min_periods" attrs="{'required': [('customize_loan', '=', True), ('type', '=', 'increase_remunerated')]}"/>
                            <field name="interest_expenses_account_id" attrs="{'required': [('customize_loan', '=', True), ('type', '=', 'increase_remunerated')]}"/>
                            <field name="long_term_loan_account_id" attrs="{'required': [('customize_loan', '=', True), ('type', '=', 'increase_remunerated')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
